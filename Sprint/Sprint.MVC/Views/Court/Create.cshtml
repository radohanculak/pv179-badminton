@model Sprint.MVC.Models.Court.CourtEditViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.CourtNumber)
        @Html.TextBoxFor(x => x.CourtNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CourtNumber, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.HourlyRate)
        @Html.TextBoxFor(x => x.HourlyRate, new { @type="decimal", @class = "form-control", @Value = Model.HourlyRate.ToString()})
        @Html.ValidationMessageFor(x => x.HourlyRate, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}